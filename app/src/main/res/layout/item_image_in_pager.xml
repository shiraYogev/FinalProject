<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- תמונה ריבועית -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/image_border"
        android:src="@drawable/button_primary"
        android:contentDescription="תמונת נכס" />

    <!-- כפתור מחיקה בפינה העליונה -->
    <ImageButton
        android:id="@+id/btnDeleteImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:background="@drawable/avatar_circle_bg"
        android:src="@drawable/bg_card"
        android:contentDescription="מחק תמונה"
        android:scaleType="centerInside"
        android:padding="6dp" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="12dp"
        android:hint="תיאור התמונה..."
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/edittext_background"
        android:padding="18dp"
        android:gravity="top|start"
        android:minLines="4"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:inputType="textMultiLine|textCapSentences" />

</RelativeLayout>